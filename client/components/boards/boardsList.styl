$spaceBetweenTiles = 16px

.myboards
  padding: 8px 12px 4px 12px
  i
    margin: 10px auto
    span
      margin: 20px auto

  h2
    margin-bottom: 0

#boards-content
  ul
    margin: 0

.addOrg
  padding: 8px 12px 8px 12px
  background: #fff none repeat scroll 0 0
  border-color: #dbdbdb #dbdbdb #c2c2c2
  border-image: none
  border-radius: 3px
  border-style: solid
  border-width: 1px
  box-shadow: 0 1px 6px rgba(0, 0, 0, 0.3)
  margin-top: 5px
  .js-short-name-invalid
    display: none

.org-members
  float: left
  padding-left: 24px
  


.window-module-title
  border-bottom: 1px solid #d6dadc
  margin: 0 0 4px 12px
  padding: 8px 0
  position: relative
  h3
    display: inline-block
    margin: 0 2px 0 0
    min-height: 18px
    min-width: 40px
    width: auto
  .add-org
    max-width: 150px

.window-module-title-no-divider
  border-bottom: medium none
  
.board-list-header-link
  background-color: #edeff0
  border-radius: 3px
  color: #8c8c8c
  margin-left: 8px
  padding: 6px 20px 6px 20px
  position: relative
  text-decoration: none

.board-list
  margin: $spaceBetweenTiles ($spaceBetweenTiles/-2) 0

  li
    float: left
    width: 25%
    box-sizing: border-box
    position: relative


    &.starred
      .fa-star,
      .fa-star-o
        opacity: 1

  a
    background-color: #999
    color: #f6f6f6
    height: 90px
    font-size: 16px
    line-height: 22px
    border-radius: 3px
    display: block
    font-weight: 700
    min-height: 18px
    padding: 8px 12px 8px 12px
    margin: 0 ($spaceBetweenTiles/2) $spaceBetweenTiles
    position: relative
    text-decoration: none

    &.tile
      background-size: auto
      background-repeat: repeat

  .board-list-item-sub-name
    color: rgba(255, 255, 255, .5)
    display: block
    font-size: 14px
    font-weight: 400
    line-height: 22px

  .js-add-board
    text-align:center

    .label
      font-weight: normal
      line-height:90px

    :hover
      background-color:#939393

  .fa-star,
  .fa-star-o
    bottom: 0
    font-size: 14px
    height: 18px
    line-height: 18px
    opacity: 0
    padding: 9px 9px
    position: absolute
    right: 0
    top: 0
    transition-duration: .15s
    transition-property: color, font-size, background

  .is-star-active
    color: white

  li:hover a
    &:hover
      .fa-star,
      .fa-star-o
        color: white

    .fa-star,
    .fa-star-o
      color: white
      opacity: .75

      &:hover
        font-size: 18px
        opacity: 1

      &.is-star-active
        opacity: 1
  .board-list-item-role
    bottom: 10px
    color: #8c8c8c
    left: 10px
    position: absolute

.board-backgrounds-list

  .board-background-select
    box-sizing: border-box
    display: block
    float: left
    width: 50%
    padding-top: 12px
    position: relative
    z-index: 1

    &:nth-child(-n + 2)
      padding-top: 0

    &:nth-child(2n)
      padding-left: 6px

    &:nth-child(2n+1)
      padding-right: 6px

    .background-box
      border-radius: 3px
      background-size: cover
      display: block
      height: 74px
      position: relative
      width: 100%
      cursor: pointer
      display: flex
      align-items: center
      justify-content: center

      i.fa-check
        font-size: 25px
        color: white

